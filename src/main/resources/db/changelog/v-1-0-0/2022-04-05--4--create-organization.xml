<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="2022-04-05--4" author="Aidar">
        <createTable tableName="organization">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organization"/>
            </column>
            <column name="version" type="INT"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="full_name" type="VARCHAR(255)"/>
            <column name="inn" type="VARCHAR(255)"/>
            <column name="kpp" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="is_active" type="BOOLEAN"/>
        </createTable>
    </changeSet>

    <changeSet id="2022-04-05--4.1" author="Aidar">
        <createIndex indexName="IX_Organization_Id" tableName="organization">
            <column name="id"/>
        </createIndex>
    </changeSet>

    <changeSet id="2022-04-05--4.2" author="Aidar">
        <createIndex indexName="IX_Organization_Inn" tableName="organization">
            <column name="inn"/>
        </createIndex>
    </changeSet>

    <changeSet id="2022-04-05--4.3" author="Aidar">
        <createIndex indexName="IX_Organization_Is_active" tableName="organization">
            <column name="is_active"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>