<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="2022-04-05--1" author="Aidar">
        <createTable tableName="country">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_country"/>
            </column>
            <column name="version" type="INT"/>
            <column name="country_name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2022-04-05--1.1" author="Aidar">
        <createIndex indexName="IX_Country_Id" tableName="country">
            <column name="id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>