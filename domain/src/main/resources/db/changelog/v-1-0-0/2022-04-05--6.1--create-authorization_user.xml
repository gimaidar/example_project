<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="2022-04-05--6.1" author="Aidar">
        <createTable tableName="authorization_user" remarks="Пользователь авторизации">
            <column autoIncrement="true" name="id" type="INT" remarks="Уникальный идентификатор">
                <constraints primaryKey="true" primaryKeyName="authorization_user_pk"/>
            </column>

            <column name="email" type="varchar(255)" remarks="Email пользователя">
                <constraints nullable="false"/>
            </column>

            <column name="password" type="varchar(255)" remarks="Пароль пользователя">
                <constraints nullable="false"/>
            </column>

            <column name="role" type="varchar(20)" remarks="Роль пользователя">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="varchar(20)" remarks="Статус пользователя">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>